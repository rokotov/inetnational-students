<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>url.properties</value>
        </property>
    </bean>

    <bean id="mappingJackson2HttpMessageConverter" class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
    </bean>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
        <property name="messageConverters">
            <list>
                <ref bean="mappingJackson2HttpMessageConverter" />
            </list>
        </property>
    </bean>

    <bean id="countryRestClient" class="kotov.interstudents.common.rest.client.CountryRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${countryServiceUrl}" />
    </bean>
    <bean id="educationInfoRestClient" class="kotov.interstudents.common.rest.client.EducationInfoRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${educationInfoServiceUrl}" />
    </bean>

    <bean id="facultyRestClient" class="kotov.interstudents.common.rest.client.FacultyRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${facultyServiceUrl}" />
    </bean>

    <bean id="groupRestClient" class="kotov.interstudents.common.rest.client.GroupRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${groupServiceUrl}" />
    </bean>

    <bean id="hostelRestClient" class="kotov.interstudents.common.rest.client.HostelRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${hostelServiceUrl}" />
    </bean>

    <bean id="personalInfoRestClient" class="kotov.interstudents.common.rest.client.PersonalInfoRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${personalInfoServiceUrl}" />
    </bean>

    <bean id="specialityRestClient" class="kotov.interstudents.common.rest.client.SpecialityRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${specialityServiceUrl}" />
    </bean>

    <bean id="studentRestClient" class="kotov.interstudents.common.rest.client.StudentRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${studentServiceUrl}" />
    </bean>

    <bean id="userRestClient" class="kotov.interstudents.common.rest.client.UserRestClient">
        <property name="restTemplate" ref="restTemplate" />
        <property name="serviceUrl" value="${userServiceUrl}" />
    </bean>

</beans>
